{
  "kind": "collectionType",
  "collectionName": "application_steps",
  "info": {
    "singularName": "application-step",
    "pluralName": "application-steps",
    "displayName": "Application Steps",
    "description": "Steps in the application process displayed on careers page"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "stepId": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 50
    },
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "description": {
      "type": "text",
      "required": true,
      "maxLength": 500
    },
    "icon": {
      "type": "string",
      "required": true,
      "maxLength": 50,
      "default": "FileText"
    },
    "details": {
      "type": "json",
      "required": true
    },
    "buttonText": {
      "type": "string",
      "maxLength": 100
    },
    "buttonIcon": {
      "type": "string",
      "maxLength": 50
    },
    "sortOrder": {
      "type": "integer",
      "required": true,
      "default": 1
    },
    "isActive": {
      "type": "boolean",
      "default": true
    }
  }
}