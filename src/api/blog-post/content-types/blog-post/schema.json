{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "singularName": "blog-post",
    "pluralName": "blog-posts",
    "displayName": "Blog Post"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "minLength": 5,
      "maxLength": 100
    },
    "slug": {
      "type": "uid",
      "required": true,
      "targetField": "title"
    },
    "excerpt": {
      "type": "string",
      "maxLength": 300
    },
    "content": {
      "type": "richtext"
    },
    "featuredImage": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images", "files", "videos", "audios"]
    },
    "author": {
      "type": "string"
    },
    "published": {
      "type": "datetime"
    },
    "category": {
      "type": "enumeration",
      "enum": ["safety", "industry-news", "company-updates"]
    },
    "metaTitle": {
      "type": "string",
      "maxLength": 60
    },
    "metaDescription": {
      "type": "string",
      "maxLength": 160
    },
    "keywords": {
      "type": "string"
    }
  }
}