{
  "kind": "singleType",
  "collectionName": "company_infos",
  "info": {
    "singularName": "company-info",
    "pluralName": "company-infos",
    "displayName": "Company Info",
    "description": "Global company information used across the website"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "companyName": {
      "type": "string",
      "required": true,
      "default": "NSW Traffic Control"
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "businessHours": {
      "type": "string",
      "required": true
    },
    "street": {
      "type": "string",
      "required": true
    },
    "suburb": {
      "type": "string",
      "required": true
    },
    "state": {
      "type": "enumeration",
      "enum": ["NSW", "VIC", "QLD", "WA", "SA", "TAS", "ACT", "NT"],
      "default": "NSW",
      "required": true
    },
    "postcode": {
      "type": "string",
      "required": true
    },
    "country": {
      "type": "string",
      "default": "Australia"
    },
    "description": {
      "type": "text",
      "maxLength": 500
    },
    "tagline": {
      "type": "string",
      "maxLength": 100
    },
    "abn": {
      "type": "string"
    },
    "emergencyPhone": {
      "type": "string"
    },
    "facebook": {
      "type": "string"
    },
    "linkedin": {
      "type": "string"
    },
    "instagram": {
      "type": "string"
    }
  }
}