{
  "kind": "collectionType",
  "collectionName": "culture_values",
  "info": {
    "singularName": "culture-value",
    "pluralName": "culture-values",
    "displayName": "Culture Values",
    "description": "Company culture and values displayed on careers page"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "description": {
      "type": "text",
      "required": true,
      "maxLength": 500
    },
    "icon": {
      "type": "string",
      "required": true,
      "maxLength": 50,
      "default": "Shield"
    },
    "sortOrder": {
      "type": "integer",
      "required": true,
      "default": 1
    },
    "isActive": {
      "type": "boolean",
      "default": true
    }
  }
}