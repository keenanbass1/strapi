{
  "kind": "collectionType",
  "collectionName": "resources",
  "info": {
    "singularName": "resource",
    "pluralName": "resources",
    "displayName": "Resource",
    "description": "Downloadable resources, guides, and documents"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": false
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "file": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["files", "images", "videos"]
    },
    "category": {
      "type": "enumeration",
      "enum": ["guides", "forms", "policies", "reports"],
      "required": true
    },
    "downloadCount": {
      "type": "integer",
      "required": true,
      "default": 0
    }
  }
}